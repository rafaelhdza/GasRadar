    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/radar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GasRadarTitle" />

    <Button
        android:id="@+id/GuestButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/roundshapeguess"
        android:backgroundTint="#955490FF"
        android:fontFamily="@font/libre_franklin_medium"
        android:text="Continue as a guest"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Continue as a guest" />

    <Button
        android:id="@+id/SignUpMainButton"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/roundshape"
        android:fontFamily="@font/libre_franklin_medium"
        android:text="Sign up"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/GuestButton"


        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LogInMainButton"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/roundshape"
        android:fontFamily="@font/libre_franklin_medium"
        android:text="Login"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/GuestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/GasRadarTitle"
        android:layout_width="300dp"
        android:layout_height="69dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:fontFamily="@font/libre_franklin_semibold_italic"
        android:inputType="textPersonName"
        android:text="GAS RADAR"
        android:textColor="@color/PrimaryReplyBlue800"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


